{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "jsx": "react-jsx",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@shared/*": ["shared/src/*"],
      "@utils/*": ["shared/utils/*"]
    }
  },
  "files": [],
  "references": [{ "path": "./backend" }, { "path": "./shared" }]
}
